        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=uploader"
          },
          {
            "type": "number",
            "name": "meter",
            "title": {
              "en": "Energy meter",
              "nl": "Energiemeter"
            },
            "placeholder": {
              "en": "optional",
              "nl": "optioneel"
            },
            "required": false,
            "value": null
